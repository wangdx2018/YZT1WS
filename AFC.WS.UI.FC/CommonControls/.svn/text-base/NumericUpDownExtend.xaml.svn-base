<UserControl x:Class="AFC.WS.UI.CommonControls.NumericUpDownExtend"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="13"/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="1" BorderBrush="Gray" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Stretch">
        <TextBlock Name="valueText" Grid.RowSpan="2" Grid.Column="0" Grid.Row="0" Padding="3" TextAlignment="Right" VerticalAlignment="Center"/>
            </Border>
        <RepeatButton Name="upButton" Click="upButton_Click" Grid.Column="1" Grid.Row="0" >
            <Image HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="0" Source="/AFC.WS.UI.CommonControls;component/Image/DataContainer_MoveNextHS.png" Stretch="Fill" />
        </RepeatButton>
        <RepeatButton Name="downButton" Click="downButton_Click" Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch">
            <Image HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="0" Source="/AFC.WS.UI.CommonControls;component/Image/DataContainer_MovePreviousHS.png" Stretch="Fill" />
        </RepeatButton>
    </Grid>
</UserControl>

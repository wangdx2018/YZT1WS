<local:UserControlBase x:Class="AFC.WS.UI.Primission.OperatorRoles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:AFC.BOM2.UIController;assembly=AFC.BOM2.UIController" 
                      xmlns:my="clr-namespace:AFC.WS.UI.Components;assembly=AFC.WS.UI.FC"
                       Background="{DynamicResource MainBackgroundBrush}">
    <DockPanel>
        <Border Background="{DynamicResource DiagramGradientBrush}" Style="{DynamicResource BorderStyle}" x:Name="DiagramBorder">
            <DockPanel>
                <Grid x:Name="rootLayout">
                    <Grid.RowDefinitions>

                        <RowDefinition Height="18*"></RowDefinition>

                        <RowDefinition Height="82*"></RowDefinition>
                    </Grid.RowDefinitions>
               

                    <GroupBox Header="操作员角色信息列表" Grid.Row="2">
                        <my:DataListControl x:Name="list"/>
                    </GroupBox>


                </Grid>
            </DockPanel>
        </Border>
    </DockPanel>
</local:UserControlBase>

<UserControl x:Class="AFC.WS.UI.UIPage.SLEMonitor.HopperInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:basiControl="clr-namespace:AFC.WS.UI.CommonControls;assembly=AFC.WS.UI.FC"
    >
    <Grid>
        <ScrollViewer x:Name="scroll21"  ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" VirtualizingStackPanel.IsVirtualizing="True" ScrollViewer.CanContentScroll="True"  >
            <StackPanel x:Name="stackPanelTicketInfo" Width="285" Orientation="Vertical">
                <GroupBox Header="Hopper信息" x:Name="header">
                    <Grid VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="21*"></RowDefinition>
                            <RowDefinition Height="4"></RowDefinition>
                            <RowDefinition Height="21*"></RowDefinition>
                            <RowDefinition Height="4"></RowDefinition>
                            <RowDefinition Height="21*"></RowDefinition>
                            <RowDefinition Height="4"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80*"></ColumnDefinition>
                            <ColumnDefinition Width="155*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Content="数量状态" Grid.Row="0" HorizontalContentAlignment="Right"  Height="26.69" VerticalAlignment="Top" />
                        <basiControl:TextBoxExtend CanReadOnly="True" Grid.Row="0" Grid.Column="1" TextWrap="Wrap"  HorizontalAlignment="Left" Width="150" x:Name="txtTicketNumStatus"   />
                    
                        <Label Content="当前数量"  Grid.Row="4" HorizontalContentAlignment="Right" />
                        <basiControl:TextBoxExtend CanReadOnly="True" Grid.Row="4" Grid.Column="1" TextWrap="Wrap"  x:Name="txtTicketCurrentNum"   HorizontalAlignment="Left" Width="150" />

                    </Grid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
